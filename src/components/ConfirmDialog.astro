---
const { id, message } = Astro.props;
---

<!-- Simple pop-up dialog box, containing a form -->
<dialog
  id={id}
  class="rounded-xl absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-white shadow-lg"
>
  <form method="dialog" class="m-2">
    <section>
      <p>{message}</p>
    </section>
    <menu class="flex justify-between p-2 m-1">
      <button
        id={`${id}-cancel`}
        class="rounded-full p-2 border border-gray-400 hover:bg-gray-100"
        >Cancelar</button
      >
      <button
        id={`${id}-confirm`}
        class="rounded-full p-2 bg-gray-400 text-white hover:bg-gray-500"
        >Confirmar</button
      >
    </menu>
  </form>
</dialog>
